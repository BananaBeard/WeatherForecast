<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WeatherForecast" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/colorBgDefault</item>
        <item name="android:statusBarColor">@color/colorBgDefault</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorTextDefault</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorError</item>
    </style>

    <style name="ThemeOverlay.App.PickerAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="alertDialogStyle">@style/PickerAlertDialog</item>
        <item name="materialAlertDialogBodyTextStyle">@style/PickerDialogListText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/PickerDialogTitleText</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="text_regular_default">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="text_bold_default">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="text_bold_orange">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/orange_primary</item>
    </style>
</resources>
